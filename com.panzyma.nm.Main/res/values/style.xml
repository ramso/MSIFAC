<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    	<!-- ********************************TextView Styles********************************************* --> 
	    <style name="StyleFontTexViewSmall">
	        <item name="android:textColor">@color/Black</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">5sp</item> 
	        <item name="android:gravity">left</item> 
	    </style>
	    	    
	    <style name="StyleFontTexViewNormal">
	        <item name="android:textColor">@color/Black</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">10sp</item> 
	        
	    </style>
	    
	    <style name="StyleFontTexViewMediumLarge">
	        <item name="android:textColor">@color/Black</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">13sp</item>
	        <item name="android:gravity">left</item>
	    </style>
	    
	    <style name="StyleFontTexViewllarge">
	        <item name="android:textColor">@color/Black</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">20dp</item>
	        <item name="android:gravity">left</item>
	    </style> 
	    
	    <style name="StyleFontTextViewActionBar">
	        <item name="android:textColor">@color/White</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">15sp</item> 
	        <item name="android:gravity">center</item> 
	        <item name="android:shadowColor">@color/LightGrey</item> 
	        <item name="android:shadowRadius">1.8</item> 
	        <item name="android:shadowDx">1.8</item> 
	        <item name="android:shadowDy">2.5</item> 
        </style>
    
    	<style name="StyleFontTextViewTittleParagraph">
	        <item name="android:textColor">@color/Black</item>
	        <item name="android:typeface">normal</item>
	        <item name="android:textSize">15sp</item> 
	        <item name="android:gravity">center</item> 
	        <item name="android:background">@color/DarkGray</item> 
	        <item name="android:shadowColor">@color/LightGrey</item> 
	        <item name="android:shadowRadius">1.8</item> 
	        <item name="android:shadowDx">1.8</item> 
	        <item name="android:shadowDy">2.5</item> 
        </style>
     
    
    
    <style name="head_text">
		<item name="android:textColor">#ff000000</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">5dp</item>
	</style>
	
     <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/foreground1</item>
        <item name="android:background">@null</item>
    </style>
    
     
    
    

    
